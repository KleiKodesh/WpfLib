<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:local="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:WpfLib.Controls">
    
    <Style TargetType="controls:UpDownSlider" x:Key="UpDownStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:UpDownSlider">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.Resources>
                            <Style TargetType="RepeatButton">
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Background" Value="{Binding Background, RelativeSource={RelativeSource AncestorType=ContentControl}}"/>
                                <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ContentControl}}"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                            <Style TargetType="Path">
                                <Setter Property="Fill" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ContentControl}}"/>
                                <Setter Property="Stretch" Value="Fill"/>
                                <Setter Property="Margin" Value="3"/>
                            </Style>
                        </Grid.Resources>
                        <RepeatButton x:Name="IncreaseButton"
                             Command="{TemplateBinding IncreaseValueCommand}">
                            <Path Data="M7,15L12,10L17,15H7Z"/>
                        </RepeatButton>
                        <RepeatButton x:Name="DecreaseButton" Grid.Row="1"
                             Command="{TemplateBinding DecreaseValueCommand}">
                            <Path Data="M7,10L12,15L17,10H7Z"/>
                        </RepeatButton>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="controls:UpDownSlider" x:Key="RightLeftStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:UpDownSlider">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.Resources>
                            <Style TargetType="RepeatButton">
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Background" Value="{Binding Background, RelativeSource={RelativeSource AncestorType=ContentControl}}"/>
                                <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ContentControl}}"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                            <Style TargetType="Path">
                                <Setter Property="Fill" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ContentControl}}"/>
                                <Setter Property="Stretch" Value="Fill"/>
                                <Setter Property="Margin" Value="3"/>
                            </Style>
                        </Grid.Resources>
                        <RepeatButton x:Name="IncreaseButton"
                                   Command="{TemplateBinding IncreaseValueCommand}">
                            <Path Data="M14,7L9,12L14,17V7Z"/>
                        </RepeatButton>
                        <RepeatButton x:Name="DecreaseButton" Grid.Column="1"
                                   Command="{TemplateBinding DecreaseValueCommand}">
                            <Path Data="M10,17L15,12L10,7V17Z"/>
                        </RepeatButton>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
